<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shihaohu.mapper.ConcernMapper">


    <insert id="addConcern">
        insert into concern(concern_id, concerned_id)
        values (#{followingId}, #{followerId})
    </insert>
    <delete id="deleteConcern">
        delete
        from concern
        where concern_id = #{followingId} and concerned_id = #{followerId}
    </delete>
    <select id="checkConcern" resultType="java.lang.Integer">
        select COUNT(*)
        from concern
        where concern_id = #{followingId} and concerned_id = #{followerId}
    </select>
</mapper>