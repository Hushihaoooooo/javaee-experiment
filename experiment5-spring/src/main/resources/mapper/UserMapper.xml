<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shihaohu.mapper.UserMapper">
    
    <resultMap id="userResultMap" type="com.shihaohu.model.User">
        <result property="userName" column="username" />
        <result property="nickName" column="nickname" />
    </resultMap>
    <insert id="add">
        insert into user(username, password, register_time)
        values (#{userName}, #{password}, now())
    </insert>

        <update id="updateUserInfo">
        update user
        <set>
            <if test="user.nickName != null">
                nickname = #{user.nickName},
            </if>
            <if test="user.intro != null">
                intro = #{user.intro},
            </if>
            <if test="user.gender != null">
                gender = #{user.gender},
            </if>
            <if test="user.province != null">
                province = #{user.province},
            </if>
            <if test="user.city != null">
                city = #{user.city},
            </if>
            <if test="user.email != null">
                email = #{user.email},
            </if>
            <if test="user.mobile != null">
                mobile = #{user.mobile},
            </if>
            <if test="user.QQ != null">
                QQ = #{user.QQ},
            </if>
            <if test="user.followerCount != null">
                follower_count = #{user.followerCount},
            </if>
            <if test="user.followingCount != null">
                following_count = #{user.followingCount},
            </if>
        </set>

        where username = #{user.userName}
    </update>
    <update id="updatePwd">
        update user
        set password = #{newPwd}
        where username = #{userName}
    </update>
    <update id="updateAvatar">
        update user
        set avatar = #{url}
        where id = #{userId}
    </update>

    <select id="findByUserName" resultMap="userResultMap">
        select *
        from user
        where username = #{userName}
    </select>
    <select id="select" resultMap="userResultMap">
        select *
        from user
        where id = #{userId}
    </select>
    <select id="getAll" resultType="com.shihaohu.model.Picture">
        SELECT
            p.id,
            p.name,
            p.url,
            p.user_id,
            p.intro,
            p.tags,
            p.upload_time,
            p.click_num,
            u.username AS uploadUserName
        FROM
            picture p
                LEFT JOIN
            user u ON p.user_id = u.id;

    </select>
    <select id="getList" resultType="com.shihaohu.model.Picture">
        select *
        from picture
        where user_id = #{userId}
    </select>
</mapper>